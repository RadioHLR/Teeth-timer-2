    <!-- Load Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f0fdfa; /* Minty light background */
            transition: background-color 0.3s;
        }
        .main-button {
            transition: all 0.2s ease-in-out;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
        .main-button:hover {
            opacity: 0.9;
            transform: translateY(-1px);
        }
        .main-button:active {
            opacity: 1;
            transform: translateY(1px);
            box-shadow: none;
        }
        .quadrant-visual {
            /* Base tooth style - Changed to deep teal/cyan for better contrast */
            background-color: #164e63; /* Deep Teal */
            color: #ffffff; /* White color for numeral/text hint */
            border: 2px solid #0891b2; /* Stronger cyan border */
            text-align: center;
            font-weight: 600;
            padding: 0.5rem 0.5rem;
            min-height: 100px; 
            display: flex;
            justify-content: center;
            align-items: center;
        }
        /* Arch effects for quadrants */
        #q-0, #q-1 {
            border-bottom-left-radius: 50% 10%;
            border-bottom-right-radius: 50% 10%;
            border-top-left-radius: 1rem;
            border-top-right-radius: 1rem;
            margin-bottom: -1px;
        }
        #q-2, #q-3 {
            border-top-left-radius: 50% 10%;
            border-top-right-radius: 50% 10%;
            border-bottom-left-radius: 1rem;
            border-bottom-right-radius: 1rem;
            margin-top: -1px;
        }
        .active-quadrant {
            /* Bright yellow when active */
            background-color: #fef08a !important; 
            border-color: #facc15 !important; /* Amber border */
            color: #854d0e !important; /* Dark text/emoji hint */
            animation: pulse-active 1.5s infinite;
        }
        @keyframes pulse-active {
            0%, 100% { box-shadow: 0 0 0 0 rgba(250, 204, 21, 0.6); } 
            50% { box-shadow: 0 0 0 8px rgba(250, 204, 21, 0); }
        }
    </style>
