<body class="flex items-center justify-center min-h-screen p-4">
    
    <!-- Main App Content -->
    <div id="app" class="w-full max-w-md bg-white p-6 rounded-3xl shadow-2xl text-center">

        <h1 class="text-3xl font-extrabold mb-2 text-gray-800">
            2-Minute Brushing Timer
        </h1>
        
        <!-- Total Timer Display -->
        <div class="mb-8 p-4 bg-cyan-50 rounded-2xl border-2 border-cyan-200">
            <div id="total-time-display" class="text-7xl font-extrabold text-cyan-700 mb-2">
                02:00
            </div>
            <div class="text-base font-semibold text-cyan-600">
                Total Time Remaining
            </div>
            <!-- Total Progress Bar -->
            <div class="mt-4 w-full bg-cyan-200 rounded-full h-3">
                <div id="total-progress-bar" class="h-3 rounded-full bg-cyan-500 transition-all duration-100" style="width: 100%;"></div>
            </div>
        </div>

        <!-- Tooth/Quadrant Visualization -->
        <div id="quadrant-container" class="grid grid-cols-2 gap-x-2 p-1 bg-white rounded-2xl mb-4">
            <!-- Top Half (Upper Jaw) -->
            <div id="q-0" class="quadrant-visual rounded-br-3xl">
                <span class="text-5xl font-extrabold">ðŸ¦·</span>
            </div>
            <div id="q-1" class="quadrant-visual rounded-bl-3xl">
                <span class="text-5xl font-extrabold">ðŸ¦·</span>
            </div>
            <!-- Bottom Half (Lower Jaw) -->
            <div id="q-2" class="quadrant-visual rounded-tr-3xl">
                <span class="text-5xl font-extrabold">ðŸ¦·</span>
            </div>
            <div id="q-3" class="quadrant-visual rounded-tl-3xl">
                <span class="text-5xl font-extrabold">ðŸ¦·</span>
            </div>
        </div>
        
        <!-- Current Status and Time -->
        <div class="mb-8 h-20">
            <p class="text-sm uppercase font-semibold text-gray-400 mb-1">Brushing Area</p>
            <p id="current-quadrant-name" class="font-bold text-gray-800 h-8">
                Ready to Brush
            </p>
            <div class="text-lg font-medium text-gray-600">
                Time in Quadrant: <span id="quadrant-time-display">30s</span>
            </div>
             <!-- Quadrant Progress Bar -->
            <div class="mt-2 w-full bg-yellow-200 rounded-full h-2">
                <div id="quadrant-progress-bar" class="h-2 rounded-full bg-yellow-500 transition-all duration-100" style="width: 100%;"></div>
            </div>
        </div>

        <!-- Control Buttons -->
        <div class="flex space-x-4">
            <button id="start-pause-button" onclick="toggleTimer()" class="main-button flex-1 py-4 px-6 rounded-full text-white font-bold bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-4 focus:ring-red-300">
                Pause
            </button>
            <button id="reset-button" onclick="resetTimer()" class="main-button flex-1 py-4 px-6 rounded-full text-gray-600 bg-gray-100 border border-gray-300 hover:bg-gray-200 focus:outline-none focus:ring-4 focus:ring-gray-300">
                Reset
            </button>
        </div>
        
        <!-- Completion Message (hidden initially) -->
        <div id="completion-message" class="hidden mt-6 p-4 bg-teal-100 border border-teal-400 text-teal-800 rounded-xl shadow-md" role="alert">
            <p class="font-bold text-xl">ðŸ¦· Mission Accomplished! ðŸ¦·</p>
            <p class="text-sm mt-1">You brushed for a full 2 minutes. Great job!</p>
        </div>

    </div>

    <script>
        // --- Configuration ---
        const TOTAL_DURATION = 120; // 2 minutes in seconds
        const QUADRANT_DURATION = 30; // 30 seconds per quadrant

        const QUADRANTS = [
            "Top Right", // Q1 - Index 0
            "Top Left",  // Q2 - Index 1
            "Bottom Left", // Q3 - Index 2
            "Bottom Right" // Q4 - Index 3
        ];

        // --- State Variables ---
        let timerInterval = null;
        let isPaused = false; // Timer starts running automatically
        let totalTimeLeft = TOTAL_DURATION;
        let quadrantIndex = 0;
        let quadrantTimeLeft = QUADRANT_DURATION;
        const totalInitialProgress = TOTAL_DURATION;

        // --- DOM Elements (Initialized directly as script is at body end) ---
        const totalTimeDisplay = document.getElementById('total-time-display');
        const totalProgressBar = document.getElementById('total-progress-bar');
        const currentQuadrantNameDisplay = document.getElementById('current-quadrant-name');
        const quadrantTimeDisplay = document.getElementById('quadrant-time-display');
        const quadrantProgressBar = document.getElementById('quadrant-progress-bar'); 
        const startPauseButton = document.getElementById('start-pause-button');
        const completionMessage = document.getElementById('completion-message');

        // Quadrant Visual Elements (Q0 to Q3)
        const quadrantVisuals = [
            document.getElementById('q-0'),
            document.getElementById('q-1'),
            document.getElementById('q-2'),
            document.getElementById('q-3')
        ];

        // --- Timer Functions ---

        /**
         * Formats seconds into MM:SS string.
         */
        function formatTime(totalSeconds) {
            const minutes = Math.floor(totalSeconds / 60);
            const seconds = totalSeconds % 60;
            return `${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')}`;
        }

        /**
         * Updates the display elements based on the current state.
         */
        function updateDisplay() {
            // Calculate current quadrant time, ensuring it is never negative for display purposes
            const currentQTime = Math.max(0, quadrantTimeLeft);
            const quadrantPercent = (currentQTime / QUADRANT_DURATION) * 100;

            // 1. Total Time and Progress
            totalTimeDisplay.textContent = formatTime(totalTimeLeft);
            const totalPercent = (totalTimeLeft / totalInitialProgress) * 100;
            totalProgressBar.style.width = `${totalPercent}%`;

            // 2. Quadrant Progress Bar 
            quadrantProgressBar.style.width = `${quadrantPercent}%`; 

            // 3. Quadrant Visuals and Name 
            for (const visual of quadrantVisuals) {
                visual.classList.remove('active-quadrant');
            }
            
            if (totalTimeLeft > 0) {
                
                if (quadrantIndex < QUADRANTS.length) {
                    
                    // Active quadrant phase (index 0, 1, 2, or 3)
                    if (!isPaused) {
                        quadrantVisuals[quadrantIndex].classList.add('active-quadrant');
                    }
                    
                    // Set current quadrant name and time 
                    currentQuadrantNameDisplay.textContent = `${QUADRANTS[quadrantIndex]} Area`; 
                    currentQuadrantNameDisplay.classList.add('text-xl', 'sm:text-2xl');
                    quadrantTimeDisplay.textContent = `${currentQTime}s`; // Uses the non-negative time
                    
                } else {
                    // Bonus Time phase (index 4)
                    currentQuadrantNameDisplay.textContent = "Bonus Time / Finished All Areas";
                    currentQuadrantNameDisplay.classList.add('text-xl', 'sm:text-2xl');
                    quadrantTimeDisplay.textContent = `0s`; // Quadrant time is zero
                }
            } else {
                // Timer finished state
                currentQuadrantNameDisplay.textContent = "Time's Up! ðŸŽ‰";
                currentQuadrantNameDisplay.classList.add('text-xl', 'sm:text-2xl');
                quadrantTimeDisplay.textContent = `0s`;
            }

            // 4. Button state
            let buttonText = 'Start';
            if (!isPaused) {
                buttonText = 'Pause';
            } else if (totalTimeLeft !== TOTAL_DURATION) {
                buttonText = 'Resume';
            }

            startPauseButton.textContent = buttonText;
            
            // Change button color based on state
            startPauseButton.classList.remove('bg-cyan-600', 'hover:bg-cyan-700', 'bg-red-600', 'hover:bg-red-700');
            if (isPaused) {
                startPauseButton.classList.add('bg-cyan-600', 'hover:bg-cyan-700');
            } else {
                startPauseButton.classList.add('bg-red-600', 'hover:bg-red-700');
            }
            
            // Disable start/pause button if time is zero
            startPauseButton.disabled = totalTimeLeft === 0;
            if (totalTimeLeft === 0) {
                 startPauseButton.classList.replace('bg-red-600', 'bg-gray-400');
                 startPauseButton.classList.replace('hover:bg-red-700', 'hover:bg-gray-400');
            }
        }

        /**
         * The core timer logic executed every second.
         */
        function tick() {
            if (totalTimeLeft <= 0) {
                clearInterval(timerInterval);
                timerInterval = null;
                isPaused = true;
                totalTimeLeft = 0;
                quadrantTimeLeft = 0; 
                
                // Final update for visuals and completion message
                for (const visual of quadrantVisuals) {
                    visual.classList.remove('active-quadrant');
                }
                
                completionMessage.classList.remove('hidden');
                updateDisplay();
                return;
            }

            totalTimeLeft--;
            
            // 1. Decrement quadrant timer only if we are still within the quadrant range (0 to 3)
            if (quadrantIndex < QUADRANTS.length) {
                quadrantTimeLeft--;
            } else {
                // Quadrant portion is done, keep quadrantTimeLeft at 0
                quadrantTimeLeft = 0;
            }


            // 2. QUADRANT SWITCH CHECK
            if (quadrantTimeLeft < 0) {
                quadrantIndex++;
                
                if (quadrantIndex < QUADRANTS.length) {
                    // Instant transition to the next quadrant time/name
                    quadrantTimeLeft = QUADRANT_DURATION; 
                } else {
                    // All quadrants are now complete (index is 4).
                    quadrantTimeLeft = 0; 
                }
            }

            updateDisplay();
        }

        /**
         * Starts or pauses the timer.
         */
        function toggleTimer() {
            completionMessage.classList.add('hidden'); // Hide completion message if resuming/starting
            
            if (isPaused) {
                // RESUME / START
                isPaused = false;
                
                // If the timer is not running, start it
                if (timerInterval === null && totalTimeLeft > 0) {
                    // Call tick() immediately to start the countdown and update display
                    tick(); 
                    timerInterval = setInterval(tick, 1000);
                }

            } else {
                // PAUSE
                isPaused = true;
                clearInterval(timerInterval);
                timerInterval = null;
            }
            updateDisplay();
        }

        /**
         * Resets the timer to its initial state and sets it to be running automatically.
         */
        window.resetTimer = function() { // Make function global for onclick attribute
            clearInterval(timerInterval);
            timerInterval = null;
            
            // Reset state variables
            totalTimeLeft = TOTAL_DURATION;
            quadrantIndex = 0;
            quadrantTimeLeft = QUADRANT_DURATION;
            isPaused = false; // Ensures it starts running immediately after reset
            completionMessage.classList.add('hidden');
            
            // Clear visual highlight
            for (const visual of quadrantVisuals) {
                visual.classList.remove('active-quadrant');
            }
            
            initializeApp(); // Re-initialize display state and auto-start
        }
        
        /**
         * Initializes the app display state on load and automatically starts the timer.
         */
        function initializeApp() {
            // 1. Set initial quadrant time display
            quadrantTimeDisplay.textContent = `${QUADRANT_DURATION}s`; 
            currentQuadrantNameDisplay.textContent = "Ready to Brush";
            currentQuadrantNameDisplay.classList.remove('text-xl', 'sm:text-2xl');
            
            // 2. Auto-start logic on load/reset
            // If it's not paused and the interval isn't running yet (initial load or after reset)
            if (timerInterval === null && totalTimeLeft > 0 && !isPaused) { 
                 // Call tick() immediately to start the countdown and update display
                 tick(); 
                 timerInterval = setInterval(tick, 1000);
            }
            
            // 3. Update display
            updateDisplay(); 
        }

        // Make toggleTimer globally accessible
        window.toggleTimer = toggleTimer; 
        
        // Global start point: Initialize the app immediately, relying on script position at the end of body
        initializeApp();

    </script>
</body>
</html>
